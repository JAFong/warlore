@require mixins
html, body
  height: 100%

body
  font-family: 'Montserrat', sans-serif
  margin: 0
  color: #B7B7B7
  background-color: black
  overflow: hidden
#header
  display: none
  background: #272727
  position: absolute
  top: 0
  left: 0
  height: 70px
  width: 100%
  z-index: 5
#content
  position: absolute
  background-color: transparent
  bottom: 5px
  left: 0
  width: 100%
  height: 100%
#footer
  background: #272727
  position: absolute
  bottom: 0
  left: 0
  height: 70px
  width: 100%
  z-index: 5

.video-box
  position: relative
  left: 0
  top: -37px
  // pointer-events: none

#YTplayer
  position: absolute
  top: 0
  left: 0
  width: 100% !important
  height: 100% !important
